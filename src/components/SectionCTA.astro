---
// src/components/SectionCTA.astro - Código Completo Actualizado
interface Props {
	title: string;
	description: string; // <--- PROPIEDAD AÑADIDA
	buttonText: string;
	buttonLink: string;
}

const { title, description, buttonText, buttonLink } = Astro.props;
---

<section class="bg-accent-main py-16">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-extrabold text-gray-900 mb-4">
            {title}
        </h2>
        <p class="text-xl text-gray-700 max-w-3xl mx-auto mb-8">
            {description}
        </p>
        <a 
            href={buttonLink} 
            class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-bold rounded-md shadow-lg text-white bg-gray-900 hover:bg-gray-700 transition duration-300 transform hover:scale-105"
        >
            {buttonText}
        </a>
    </div>
</section>