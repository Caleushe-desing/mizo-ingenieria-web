---
// Layout.astro - Restaurado a estado estable
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
	title: string;
	description: string;
	// Propiedades para SEO avanzado
	ogTitle?: string;
	ogDescription?: string;
	ogImage?: string;
}

const { 
	title, 
	description, 
	ogTitle = title, 
	ogDescription = description, 
	ogImage = '/mizo-social-preview.jpg' // Imagen social por defecto
} = Astro.props;

// URL base para Open Graph
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		
		<link rel="icon" type="image/png" href="/favicon.png" />
		
		<meta name="generator" content={Astro.generator} />
		
		<link rel="canonical" href={canonicalURL} />
		
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="robots" content="index, follow" />

		<meta property="og:title" content={ogTitle} />
		<meta property="og:description" content={ogDescription} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:image" content={new URL(ogImage, Astro.site).href} />
		<meta property="og:site_name" content="Mizo IngenierÃ­a" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@mizo-ing" /> 
		<meta name="twitter:creator" content="@mizo-ing" />
		<meta name="twitter:title" content={ogTitle} />
		<meta name="twitter:description" content={ogDescription} />
		<meta name="twitter:image" content={new URL(ogImage, Astro.site).href} />

		<ViewTransitions />
	</head>
	<body class="bg-gray-900 text-gray-300 min-h-screen flex flex-col">
		<Header />
		
		<main class="flex-grow max-w-9xl mx-auto w-full"> 
			<slot />
		</main>
		
		<Footer />
	</body>
</html>
<style is:global>
	/* Los estilos globales (como @tailwind) deben estar en el archivo importado: ../styles/global.css */
</style>